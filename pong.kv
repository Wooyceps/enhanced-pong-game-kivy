#:kivy 1.0.9

<PongPaddle>:
    size: 25, 200
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.width/3, self.height
        Color:
            rgba: .65, .5, .33, 1
        Rectangle:
            pos: self.x + self.width/3, self.y
            size: self.width/3, self.height
        Color:
            rgba: .77, .06, .06, 1
        Rectangle:
            pos: self.x + self.width*2/3, self.y
            size: self.width/3, self.height

<PongBall>:
    size: 50, 50
    canvas:
        Color:
            rgba: 1, .55, 0, 1
        Ellipse:
            pos: self.pos
            size: self.size

<StatTracker>
    Label:
        font_size: 40

        Label:
            x: root.x
            bottom: root.center_y + 3
            text: #####

        Label:
            x: root.x
            top: root.center_y - 3
            text: #####

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    stat_tracker: pong_stats

    canvas:

        Color:
            rgba: .13, .36, .19, 1
        Rectangle:
            pos: self.pos
            size: self.width, self.height
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y

    PongBall:
        id: pong_ball
        center: self.parent.center

    StatTracker:
        id: pong_stats
        center: root.width * 3 / 4, root.height / 4
